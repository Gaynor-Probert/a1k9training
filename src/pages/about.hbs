{{#extend "layout"}}

{{#content "intro"}}
  {{#if model.components.intro}}
    {{> (lookup model.components 'intro')}}
  {{/if}}
{{/content}}

{{#content "main"}}
<div class="page-header">
  <h1>{{model.title}}</h1>
</div>

{{#if model.components.content1}}
<div class="row">
  <div class="col-md-12">
    {{> (lookup model.components 'content1')}}
  </div>
</div>
{{/if}}

{{#if model.components.content2}}
<div class="row">
  <div class="col-md-12">
    {{> (lookup model.components 'content2')}}
  </div>
</div>
{{/if}}

{{#if model.components.content3}}
  {{> (lookup model.components 'content3')}}
{{/if}}

{{#if model.next.name}}
  <a href="{{ model.next.link }}" class="btn btn-primary">Next: {{ model.next.name}}</a>
{{/if}}

{{/content}}
{{/extend}}
